@model LogisticsPanel.Models.Arac

@{
    ViewData["Title"] = "Araç Düzenle";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Plaka" class="form-label"></label>
        <input asp-for="Plaka" class="form-control" />
        <span asp-validation-for="Plaka" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SurucuAdi" class="form-label"></label>
        <input asp-for="SurucuAdi" class="form-control" />
        <span asp-validation-for="SurucuAdi" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="KapasiteKg" class="form-label"></label>
        <input asp-for="KapasiteKg" class="form-control" type="number" min="0" />
        <span asp-validation-for="KapasiteKg" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Durum" class="form-label"></label>
        <select asp-for="Durum" class="form-select">
            <option value="Boş" selected="@Model.Durum == " Boş"">Boş</option>
            <option value="Yolda" selected="@Model.Durum == " Yolda"">Yolda</option>
            <option value="Bakımda" selected="@Model.Durum == " Bakımda"">Bakımda</option>
        </select>
        <span asp-validation-for="Durum" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SonServisTarihi" class="form-label"></label>
        <input asp-for="SonServisTarihi" class="form-control" type="date" />
        <span asp-validation-for="SonServisTarihi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
