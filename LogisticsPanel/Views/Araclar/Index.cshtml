@model List<LogisticsPanel.Models.Arac>

@{
    ViewData["Title"] = "Araçlar";
}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">Yeni Araç Ekle</a>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Plaka</th>
            <th>Sürücü Adı</th>
            <th>Kapasite (kg)</th>
            <th>Durum</th>
            <th>Son Servis Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var arac in Model)
        {
            <tr>
                <td>@arac.Plaka</td>
                <td>@arac.SurucuAdi</td>
                <td>@arac.KapasiteKg</td>
                <td>@arac.Durum</td>
                <td>@arac.SonServisTarihi.ToString("dd.MM.yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@arac.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@arac.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
