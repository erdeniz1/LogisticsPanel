@model LogisticsPanel.Models.Arac

@{
    ViewData["Title"] = "Araç Sil";
}

<h2>@ViewData["Title"]</h2>

<h4>Bu aracı silmek istediğinize emin misiniz?</h4>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-2">Plaka</dt>
        <dd class="col-sm-10">@Model.Plaka</dd>

        <dt class="col-sm-2">Sürücü Adı</dt>
        <dd class="col-sm-10">@Model.SurucuAdi</dd>

        <dt class="col-sm-2">Kapasite (kg)</dt>
        <dd class="col-sm-10">@Model.KapasiteKg</dd>

        <dt class="col-sm-2">Durum</dt>
        <dd class="col-sm-10">@Model.Durum</dd>

        <dt class="col-sm-2">Son Servis Tarihi</dt>
        <dd class="col-sm-10">@Model.SonServisTarihi.ToString("dd.MM.yyyy")</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
