@model IEnumerable<LogisticsPanel.Models.Musteri>

@{
    ViewData["Title"] = "Müşteriler";
}

<h1>Müşteriler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Müşteri Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Firma</th>
            <th>Email</th>
            <th>Telefon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var musteri in Model)
        {
            <tr>
                <td>@musteri.Ad</td>
                <td>@musteri.Soyad</td>
                <td>@musteri.Firma</td>
                <td>@musteri.Email</td>
                <td>@musteri.Telefon</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@musteri.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@musteri.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
