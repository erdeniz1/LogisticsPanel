@{
    var userRole = Context.Session.GetString("UserRole");
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>🚚 Logistics Panel</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/custom.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" style="min-height: 100vh;">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px;">
            <h4 class="text-center mb-4">🚚 <strong>Logistics</strong> Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a href="/Reports" class="nav-link text-white"><i class="fa fa-home me-2"></i>Dashboard</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Musteriler" class="nav-link text-white"><i class="fa fa-user me-2"></i>Müşteriler</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Gonderiler" class="nav-link text-white"><i class="fa fa-box me-2"></i>Gönderiler</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Araclar" class="nav-link text-white"><i class="fa fa-truck me-2"></i>Araçlar</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Rotalar" class="nav-link text-white"><i class="fa fa-map me-2"></i>Rotalar</a>
                </li>
                
                <li class="nav-item mb-2">
                    <a href="/Destek" class="nav-link text-white"><i class="fa fa-headset me-2"></i>Destek</a>
                </li>
                <li class="nav-item mb-2">
                    <a href="/Settings" class="nav-link text-white"><i class="fa fa-cog me-2"></i>Ayarlar</a>
                </li>
                <li class="nav-item mt-4">
                    <a href="/Account/Logout" class="nav-link text-danger"><i class="fa fa-sign-out-alt me-2"></i>Çıkış</a>
                </li>
            </ul>
        </div>

        <!-- Content -->
        <div class="flex-grow-1 bg-light">
            <!-- Navbar -->
            <nav class="navbar navbar-light bg-white shadow-sm px-4">
                <span class="navbar-text">Hoşgeldin, @Context.Session.GetString("UserEmail") (@userRole)</span>
            </nav>

            <!-- Main Content -->
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
