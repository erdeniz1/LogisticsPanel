@model List<LogisticsPanel.Models.Destek>

@{
    ViewData["Title"] = "Destek Talepleri";
}

<h2>Destek Talepleri</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">Yeni Destek Talebi Oluştur</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Konu</th>
            <th>Mesaj</th>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Müşteri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Konu</td>
                <td>@(item.Mesaj.Length > 50 ? item.Mesaj.Substring(0, 50) + "..." : item.Mesaj)</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Durum</td>
                <td>@item.Musteri?.Ad</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
