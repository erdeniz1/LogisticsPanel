@model LogisticsPanel.Models.Destek

@{
    ViewData["Title"] = "Destek Talebi Detay";
}

<h2>Destek Talebi Detayları</h2>

<dl class="row">
    <dt class="col-sm-2">Konu</dt>
    <dd class="col-sm-10">@Model.Konu</dd>

    <dt class="col-sm-2">Mesaj</dt>
    <dd class="col-sm-10">@Model.Mesaj</dd>

    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.Tarih.ToString("dd.MM.yyyy HH:mm")</dd>

    <dt class="col-sm-2">Durum</dt>
    <dd class="col-sm-10">@Model.Durum</dd>

    <dt class="col-sm-2">Müşteri</dt>
    <dd class="col-sm-10">@Model.Musteri?.Ad</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</p>
